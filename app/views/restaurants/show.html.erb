<h1><%= 'Restaurant ' + @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<p>
  <% @reviews.each do |review| %>
    <%= '*'* review.rating %>
    <%= review.content %>
  <% end %>
</p>

<%= link_to 'Back to List', restaurants_path, class: 'btn btn-secondary mt-3' %>
<%= link_to 'Insert review', new_restaurant_review_path(@restaurant), class: 'btn btn-secondary mt-3' %>
